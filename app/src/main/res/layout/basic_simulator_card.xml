<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:background="#22009999"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22009999"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cardTitleView"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Hello World"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/cardDescription"
            android:textSize="14dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#333"
            android:text="Hello World"
            android:ellipsize="end"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableStart="@drawable/ic_hardware_keyboard_arrow_down"
            android:background="@drawable/border_background"
            android:text="CLICK TO EXPAND"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="#fff" />
    </LinearLayout>

</android.support.v7.widget.CardView>
